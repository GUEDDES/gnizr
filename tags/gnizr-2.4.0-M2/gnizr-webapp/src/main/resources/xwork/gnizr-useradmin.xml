<!DOCTYPE xwork PUBLIC "-//OpenSymphony Group//XWork 1.0//EN"
	"http://www.opensymphony.com/xwork/xwork-1.0.dtd">
<xwork>
	
	<!-- see also webwork doc: http://www.opensymphony.com/webwork/wikidocs/Interceptors.html -->
	
	<package name="gnizr-no-policy" extends="gnizr-basic">
		<action name="login" class="com.gnizr.web.action.user.UserLogin"
			method="doDefault">
			<interceptor-ref name="loggedIn"/>					
			<interceptor-ref name="config-gnizr"/>			
			<interceptor-ref name="basicStack"/>
			<result name="success" type="redirect">/home</result>				
			<result name="input" type="freemarker">/login.ftl</result>
			<result name="error" type="freemarker">/login.ftl</result>
		</action>
		
		<action name="userLogin" class="com.gnizr.web.action.user.UserLogin">
			<interceptor-ref name="loggedIn"/>		
			<interceptor-ref name="config-gnizr"/>			
			<interceptor-ref name="validationWorkflowStack"/>
			<result name="success" type="redirect">/home</result>				
			<result name="input" type="freemarker">/login.ftl</result>
			<result name="error" type="freemarker">/login.ftl</result>
		</action>
		
		<action name="logout" class="com.gnizr.web.action.user.UserLogout">
	        <interceptor-ref name="config-gnizr"/>	
			<interceptor-ref name="basicStack"/>		
			<result name="success" type="redirect">/</result>
			<result name="error">/common/error.ftl</result>
		</action>
	</package>
	
	<package name="gnizr-registration" extends="gnizr-default">
		<action name="register" class="com.gnizr.web.action.user.Registration">
			<interceptor-ref name="gnizrDefaultStack"/>					
			<result name="input" type="freemarker">/users/register.ftl</result>							
			<result name="error" type="freemarker">/users/register.ftl</result>
		</action>
	
		<action name="userRegister" class="com.gnizr.web.action.user.Registration"
				method="doRegistration">
        	<interceptor-ref name="config-gnizr"/>			
   		    <interceptor-ref name="validationWorkflowStack"/>
			<result name="success" type="redirect-action">
				<param name="namespace">/settings/folders</param>
				<param name="actionName">createMyBookmarksFolder</param>			
			</result>
			<result name="input" type="freemarker">/users/register.ftl</result>
			<result name="error" type="freemarker">/users/register.ftl</result>
		</action>
	</package>	
	
</xwork>